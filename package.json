{
  "name": "toolhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:vue": "vue-cli-service build",
    "lint": "npm run lint:eslint && npm run lint:vue",
    "lint:eslint": "eslint .",
    "lint:vue": "vue-cli-service lint",
    "schemas:generate": "jsonschema-tools materialize-all",
    "serve:vue": "vue-cli-service serve",
    "test": "npm run test:jsonschema && npm run test:vue",
    "test:jsonschema": "mocha tests/jsonschema",
    "test:vue": "vue-cli-service test:unit"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "swagger-client": "^3.12.0",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0",
    "vuetify": "^2.2.11",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@mdi/font": "^5.7.55",
    "@vue/cli": "^4.5.7",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-mocha": "^4.5.8",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@wikimedia/jsonschema-tools": "latest",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.0",
    "eslint-config-wikimedia": "0.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.1.0",
    "mocha": "^6.2.0",
    "rapidoc": "^8.3.0",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0",
    "webpack-bundle-tracker": "^0.4.3"
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [ "wikimedia/client" ],
    "overrides": [
      {
        "files": [ "vue/src/**/*.{js,vue}" ],
        "extends": [
          "wikimedia/vue-es6",
          "wikimedia/language/es6",
          "plugin:vue/recommended"
        ],
        "rules": {
            "camelcase" : "off",
            "no-undef" : "off"
        }
      },
      {
        "files": [ "tests/jsonschema/**/*.js" ],
        "extends": [
            "wikimedia/server",
            "wikimedia/mocha"
        ]
      },
      {
        "files": [ "vue.config.js" ],
        "extends": [ "wikimedia/server" ]
      }
    ]
  },
  "eslintIgnore": [
    "docs",
    "bin",
    ".pipeline"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
