{
  "name": "toolhub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:vue": "vue-cli-service build",
    "format": "eslint --fix .",
    "lint": "npm run lint:eslint && npm run lint:vue && npm run lint:stylelint && npm run lint:banana && npm run lint:css-rtl",
    "lint:banana": "banana-checker vue/src/assets/locales/i18n/",
    "lint:css-rtl": "bash -c \"if grep -rnHIE --color '\\b[mp][lr]-(n?[0-9][0-6]?|auto)\\b' vue/src; then echo 'ERROR: Use S and E helper classes, not L and R. (T269056)'; echo; exit 1; fi\"",
    "lint:eslint": "eslint .",
    "lint:stylelint": "stylelint -f verbose \"**/*.{css,scss,sass,vue}\"",
    "lint:vue": "vue-cli-service lint",
    "schemas:generate": "jsonschema-tools materialize-all",
    "serve:vue": "vue-cli-service serve",
    "test": "npm run test:jsonschema && npm run test:vue",
    "test:jsonschema": "mocha tests/jsonschema",
    "test:vue": "vue-cli-service test:unit --colors vue/src/**/*.spec.js"
  },
  "dependencies": {
    "@wikimedia/language-data": "^1.0.0",
    "chart.js": "^2.9.4",
    "core-js": "^3.6.5",
    "swagger-client": "^3.12.0",
    "vue": "^2.6.11",
    "vue-chartjs": "^3.5.1",
    "vue-i18n": "^8.22.1",
    "vue-moment": "^4.1.0",
    "vue-router": "^3.2.0",
    "vuetify": "^2.2.11",
    "vuex": "^3.4.0"
  },
  "devDependencies": {
    "@intlify/eslint-plugin-vue-i18n": "^0.9.0",
    "@mdi/font": "^5.7.55",
    "@vue/cli": "^4.5.7",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-unit-mocha": "^4.5.8",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@wikimedia/jsonschema-tools": "latest",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.0",
    "eslint-config-wikimedia": "0.17.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-vue": "^7.1.0",
    "eslint-plugin-vuetify": "^1.0.0-beta.7",
    "grunt-banana-checker": "^0.9.0",
    "mocha": "^6.2.0",
    "rapidoc": "^8.3.0",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "stylelint": "^13.8.0",
    "stylelint-config-wikimedia": "^0.10.3",
    "vue-cli-plugin-vuetify": "~2.0.7",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.3.0",
    "webpack-bundle-tracker": "^0.4.3"
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint",
      "allowImportExportEverywhere": true
    },
    "extends": [
      "wikimedia/client"
    ],
    "reportUnusedDisableDirectives": true,
    "overrides": [
      {
        "files": [
          "vue/src/**/*.{js,vue}"
        ],
        "extends": [
          "wikimedia/vue-es6",
          "wikimedia/language/es6",
          "plugin:vue/recommended",
          "plugin:@intlify/vue-i18n/recommended"
        ],
        "plugins": [
          "vuetify"
        ],
        "rules": {
          "camelcase": "off",
          "no-undef": "off",
          "vue/singleline-html-element-content-newline": "off",
          "vuetify/grid-unknown-attributes": "error",
          "vuetify/no-deprecated-classes": "error",
          "vuetify/no-legacy-grid": "error",
          "@intlify/vue-i18n/no-dynamic-keys": "error",
          "@intlify/vue-i18n/no-unused-keys": [
            "error",
            {
              "extensions": [
                ".js",
                ".vue"
              ]
            }
          ],
          "@intlify/vue-i18n/no-raw-text": [
            "error",
            {
              "ignoreNodes": [
                "v-icon"
              ],
              "ignorePattern": "^\\s*[:()\"]+$",
              "ignoreText": []
            }
          ],
          "@intlify/vue-i18n/key-format-style": [
            "error",
            "kebab-case"
          ]
        },
        "settings": {
          "vue-i18n": {
            "localeDir": "./vue/src/assets/locales/i18n/*.js",
            "messageSyntaxVersion": "^8.22.1"
          }
        }
      },
      {
        "files": [
          "tests/jsonschema/**/*.js"
        ],
        "extends": [
          "wikimedia/server",
          "wikimedia/mocha"
        ]
      },
      {
        "files": [
          "vue.config.js"
        ],
        "extends": [
          "wikimedia/server"
        ]
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "docs",
    "bin",
    ".pipeline"
  ],
  "stylelint": {
    "extends": "stylelint-config-wikimedia/grade-a",
    "ignoreFiles": [
      "docs/_build/**/*.css",
      "vue/dist/**/*"
    ],
    "rules": {
      "selector-max-id": null,
      "declaration-no-important": null
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
